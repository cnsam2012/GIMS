<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.chang.gpms.dao.UserMapper">

    <sql id="insertFields">
        username
        , password, salt, email, type, status, activation_code, header_url, create_time, department_id, role_name
    </sql>

    <sql id="insertWechatUserFields">
        username
        ,
        type,
        status,
        header_url,
        create_time,
        wechat_open_id
    </sql>

    <sql id="selectFields">
        id
        ,
        username,
        password,
        salt,
        email,
        type,
        status,
        activation_code,
        header_url,
        create_time,
        wechat_open_id,
        role_name,
        department_id,
        role_name
    </sql>

    <!--根据 Id 查询用户信息-->
    <select id="selectById" resultType="me.chang.gpms.pojo.User">
        select
        <include refid="selectFields"></include>
        from user
        where id = #{id}
    </select>

    <!--根据 WechatOpenId 查询用户信息-->
    <select id="selectByWechatOpenId" resultType="me.chang.gpms.pojo.User">
        select
        <include refid="selectFields"></include>
        from user
        where wechat_open_id = #{wechatOpenId}
    </select>

    <!--根据 Username 查询用户信息-->
    <select id="selectByName" resultType="me.chang.gpms.pojo.User">
        select
        <include refid="selectFields"></include>
        from user
        where username = #{username}
    </select>

    <!--根据 email 查询用户信息-->
    <select id="selectByEmail" resultType="me.chang.gpms.pojo.User">
        select
        <include refid="selectFields"></include>
        from user
        where email = #{email}
    </select>


    <select id="selectUsersRows" resultType="java.lang.Integer">
        select count(id)
        from user
    </select>
    <select id="getAllUsers" resultType="me.chang.gpms.pojo.User">
        select
        <include refid="selectFields"></include>
        from user
        order by id desc
        limit #{offset}, #{limit}
    </select>

    <!--插入用户信息（注册）-->
    <insert id="insertUser" parameterType="me.chang.gpms.pojo.User" keyProperty="id">
        insert into user (<include refid="insertFields"></include>)
        values(#{username}, #{password}, #{salt}, #{email}, #{type}, #{status}, #{activationCode}, #{headerUrl},
        #{createTime}, #{departmentId}, #{roleName})
    </insert>

    <!--插入Wechat用户信息（注册）-->
    <insert id="insertWechatUser" parameterType="me.chang.gpms.pojo.User" keyProperty="id">
        insert into user (<include refid="insertWechatUserFields"></include>)
        values(#{username}, #{type}, #{status}, #{headerUrl}, #{createTime}, #{wechatOpenId})
    </insert>

    <!--修改用户状态-->
    <update id="updateStatus">
        update user
        set status = #{status}
        where id = #{id}
    </update>

    <!--修改用户头像-->
    <update id="updateHeader">
        update user
        set header_url = #{headerUrl}
        where id = #{id}
    </update>

    <!--修改用户名-->
    <update id="updateUsername">
        update user
        set username = #{username}
        where id = #{id}
    </update>

    <!--修改密码-->
    <update id="updatePassword">
        update user
        set password = #{password}
        where id = #{id}
    </update>

    <update id="alterUserById">
        update user
        set
            username = #{username},
            email = #{email},
            phone = #{phone},
            type = #{type},
            status = #{status},
            department_id = #{departmentId},
            role_name = #{roleName}
        where id = #{id}
    </update>

</mapper>
