<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.chang.gpms.dao.ReportMapper">

    <sql id="selectFields">
        id
        , user_id, title, content, type, status, create_time, score
-- id
-- user_id
-- title
-- content
-- type
-- status
-- create_time
-- comment_count
-- score
-- is_deleted
    </sql>

    <sql id="insertFields">
        user_id
        , title, content, type, status, create_time, score
    </sql>

    <sql id="logicDelete">
        and is_deleted != 1
    </sql>

    <sql id="isDeletedField">
        , is_deleted
    </sql>

    <!--分页查询报告信息-->
    <!--不显示拉黑的报告, 按照是否置顶和创建时间排序-->
    <select id="selectReports" resultType="me.chang.gpms.pojo.Report">
        select
        <include refid="selectFields"></include>
        <include refid="isDeletedField"></include>
        from report

        where status != 2
        <include refid="logicDelete"></include>

        <if test="userId!=0">
            and user_id = #{userId}
        </if>

        <if test="orderMode == 0">
            order by type desc, create_time desc
        </if>

        <if test="orderMode == 1">
            order by type desc, score desc, create_time desc
        </if>

        limit #{offset}, #{limit}
    </select>

    <!--查询报告的个数-->
    <select id="selectReportRows" resultType="int">
        select count(id)
        from report
        where status != 2
        <include refid="logicDelete"></include>
        <if test="userId != 0">
            and user_id = #{userId}
        </if>
    </select>

    <!--插入/添加报告-->
    <insert id="insertReport" parameterType="me.chang.gpms.pojo.Report" keyProperty="id">
        insert into report (<include refid="insertFields"></include>)
        values(
        #{userId},
        #{title},
        #{content},
        #{type},
        #{status},
        #{createTime},
        #{score}
        )
    </insert>

    <!--根据 id 查询报告-->
    <select id="selectReportById" resultType="me.chang.gpms.pojo.Report">
        select *
        from report
        where id = #{id}
        <include refid="logicDelete"></include>
    </select>

<!--    <update id="updateCommentCount">-->
<!--        update report-->
<!--        set comment_count = #{commentCount}-->
<!--        where id = #{id}-->
<!--        <include refid="logicDelete"></include>-->
<!--    </update>-->

    <!--修改报告类型：1-周记; 2-月记; 3-总结-->
    <update id="updateType">
        update report
        set type = #{type}
        where id = #{id}
        <include refid="logicDelete"></include>
    </update>

    <!--修改报告状态：0-正常; 1-精华; 2-拉黑;-->
    <update id="updateStatus">
        update report
        set status = #{status}
        where id = #{id}
        <include refid="logicDelete"></include>
    </update>

    <!--修改报告分数-->
    <update id="updateScore">
        update report
        set score = #{score}
        where id = #{id}
        <include refid="logicDelete"></include>
    </update>

</mapper>
